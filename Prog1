// Prog1.cpp: определяет точку входа для консольного приложения.
//

#include "stdafx.h"
#include <conio.h>


int _tmain(int argc, _TCHAR* argv[])
{
int counter, denominator;

denominator = counter = 1; //Устанавливаем начальные значение

printf("Uvelichivaem schetchik i otobrazhaem na ekrane \n");
printf("%d\n",counter++);
printf("Vychisliaem znachenie\ Counter/Denominator = ");
printf("%d\n",counter/denominator);
printf("%d\n",counter);

getch();
}
